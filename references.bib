title = {{A spectral element method for fluid dynamics: Laminar flow in a channel expansion}},
url = {https://www.sciencedirect.com/science/article/pii/0021999184901281},
volume = {54},
year = {1984}
}

@inproceedings{Merzari2019a,
abstract = {Numerical simulation has been an intrinsic part of nuclear engineering research supporting the design of nuclear power plants. With the advent of Petascale computing (i.e., computers capable of more than 1 PFlop), the simulation of portions or even entire reactor components with turbulence-resolving techniques is now possible. These simulations can provide invaluable insight into the flow dynamics, that is difficult or often impossible to obtain with experiments alone. The spectral element method in particular has emerged as powerful method to deliver massively parallel calculations at high fidelity using Large Eddy Simulation or Direct Numerical Simulation. In this work we review the fundamentals of the method and the reasons it is compelling for the simulation of nuclear engineering flows. Moreover, we review a series of Petascale scale simulations, including the simulations of helical coil steam generators, the flow in fuel assemblies and pebble beds. Even with Petascale computing, there remain limitations for nuclear modeling and simulation tools. In particular we are still limited in the size and scope of turbulence resolving simulations by computing power and the resolution requirements, which scale with the Reynolds number. In the final part of this manuscript we the future of the field including recent advancements on emerging architectures such as GPU-based supercomputers.},
address = {Portland, OR},
author = {Merzari, Elia},
booktitle = {18th International Topical Meeting on Nuclear Reactor Thermal Hydraulics (NURETH-18)},
mendeley-groups = {Preparation/NED_202010},
publisher = {American Nuclear Society},
title = {{Toward Exascale: Large Eddy Simulation and Direct Numerical Simulation of Nuclear Reactor Flows with the Spectral Element Method}},
year = {2019}
}

@article{Martinez2019,
abstract = {An alternative methodology is proposed here to overcome the excessive cost of large eddy simulations (LES) of full-length heated rod bundle calculations, while improving the inaccurate results typically obtained with Reynolds-averaged Navier–Stokes equations (RANS). While the cost of the full-length LES is generally too high, LES of a small section of a single rod is usually affordable. The idea presented here consists of using the information granted by the small LES calculation to determine the appropriate turbulence viscosity or turbulent thermal diffusivity that can be used to solve only for the temperature field in a pseudo-RANS approach. The study has been performed with single-rod simulations with a P/D of 1.12 and 1.24, considering rod lengths that are representative of reactor applications, for the cases of uniform heat flux and a more realistic cosine-like axial heat distribution. The spectral element code Nek5000 has been used for all LES, RANS, and pseudo-RANS simulations. The recently proposed Nek5000 steady-state solver has been used for solving the temperature field in the pseudo-RANS approach and has proved significantly faster than transient schemes. Prediction of thermal quantities is compared with classical linear and nonlinear RANS models. LES for the full-length rods has also been performed and is used as a reference. Results of the proposed method show significant improvements with respect to those obtained with RANS.},
author = {Mart{\'{i}}nez, Javier and Lan, Yu-Hsiang and Merzari, Elia and Min, Misun},
doi = {10.1016/J.IJHEATMASSTRANSFER.2019.07.049},
issn = {0017-9310},
journal = {International Journal of Heat and Mass Transfer},
month = {oct},
pages = {118399},
publisher = {Pergamon},
title = {{On the use of LES-based turbulent thermal-stress models for rod bundle simulations}},
url = {https://www.sciencedirect.com/science/article/pii/S0017931019316904},
volume = {142},
year = {2019}
}

