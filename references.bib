@inproceedings{Shaver2019b,
abstract = {The DOE's Versatile Test Reactor (VTR) program is investigating a fast-flux irradiation facility that supports the experimentation and testing of a wide variety of fuel forms, materials, and advanced sensors for advanced nuclear energy systems. Core components are being considered which need to be evaluated for pressure drop. This includes calculation of local friction factors and form loss coefficients using the advanced computational fluid dynamics code, Nek5000. Due to the high Reynolds numbers expected in the VTR ( 106), RANS methods are necessary. A wall-resolved regularized k-! turbulence model is used to perform simulations at the target Reynolds numbers. However, this method must be evaluated for its performance in the complex flow geometries associated with reactor core components. Therefore, simulations using both LES and RANS models are performed at moderate Reynolds numbers to provide a direct comparison. Results from both models are compared to the most applicable literature correlations where available. Simulations have been performed for two potential designs of the upper and lower reflectors. A straight channel design considered a semi-circular channel on each of three of the outside faces of a regular hexagonal assembly. The inlet and outlet sections were on opposing sets of faces, representing a 120 rotation with an abrupt transition between the two sections. This design was analyzed for both pressure drop and maximum temperature due to gamma heating. All models predicted a large pressure drop associated with this geometry The results of the gamma heating analysis predicted a maximum temperature well within acceptable thermal margins. A second design considered curved channels with no abrupt transition. Significantly lower pressure drops were predicted for the second design, with good agreement between RANS results, LES results, and literature correlations. Further components are being explored, initially focusing on sections of a fuel assembly.},
address = {Portland, OR},
author = {Shaver, D.R. and Yuan, H. and Heidet, F.},
booktitle = {18th International Topical Meeting on Nuclear Reactor Thermal Hydraulics (NURETH-18)},
publisher = {American Nuclear Society},
title = {{Computational Fluid Dynamics Assessment of Proposed Axial Reflector Designs for the Versatile Test Reactor Using Nek5000}},
year = {2019}
}

@article{Merzari2012,
abstract = {The rapid advancement of numerical techniques and the availability of increasingly powerful supercomputers recently enabled scientists to use large eddy simulation (LES) to simulate numerically the flow in a full subassembly composed of wire-wrapped pins. Because of the extreme computational cost of such simulations, it was not possible to conduct a sensitivity case on the pin-wire interface modeling. Since such calculations are likely to be extended to conjugate heat transfer, however, a sensitivity study is necessary to assess the reliability of the numerical results. It is well known, for example, that conjugate heat-transfer results are often strongly influenced by near-wall modeling. The objective of the present work is to investigate the effect of pin-wire contact modeling from the point of view of both the hydraulics and the heat transfer characteristics. In particular, the focus is on the prediction of the hot spot in conjugate heat-transfer calculations. The primary test case is the simplified geometry recently proposed by Ranjan et al., which consists of a simple channel flow with a wire embedded in one of the walls. After reproducing the results using the LES code Nek5000, we examined several other choices for the wire-pin interface modeling, including the introduction of a nominal gap between the wire and wall. The results shed light on the sensitivity of CFD calculations results to the modeling of the interface region between wires and pins.},
author = {Merzari, E. and Pointer, W.D. and Smith, J.G. and Tentner, A. and Fischer, P.},
doi = {10.1016/J.NUCENGDES.2011.09.030},
issn = {0029-5493},
journal = {Nuclear Engineering and Design},
month = {dec},
pages = {374--386},
publisher = {North-Holland},
title = {{Numerical simulation of the flow in wire-wrapped pin bundles: Effect of pin-wire contact modeling}},
url = {https://www.sciencedirect.com/science/article/pii/S0029549311008235},
volume = {253},
year = {2012}
}

